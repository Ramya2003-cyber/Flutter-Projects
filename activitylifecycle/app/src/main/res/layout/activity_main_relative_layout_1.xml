<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >

    <ImageView
        android:id="@+id/image"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/mahesh"
        android:layout_margin="20dp"
        />
    <TextView
        android:id="@+id/txtname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mahesh Babu"
        android:layout_toRightOf="@id/image"
        android:layout_marginTop="40dp"
        android:textStyle="bold"
        android:textColor="#876ef2"
        android:textSize="18sp"
        />
    <TextView
        android:id="@+id/txtemail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="prince@gmail.com"
        android:layout_below="@id/txtname"
        android:layout_toRightOf="@id/image"
        android:layout_marginTop="10dp"
        android:textStyle="italic"
        android:textColor="#dc6ef2"
        android:textSize="18sp"
        />
    <TextView
        android:id="@+id/txtnumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+91 9059132009"
        android:layout_toRightOf="@id/image"
        android:layout_below="@id/txtemail"
        android:layout_marginTop="10dp"
        android:textStyle="normal"
        android:textColor="#de4743"
        android:textSize="18sp"
        />
    <Button
        android:id="@+id/btnmoreinfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/image"
        android:text="MORE INFORMATION"
        android:backgroundTint="#4351de"
        android:textSize="18sp"
        android:textColor="#ffffff"
        />
    <Button
        android:id="@+id/btnexit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="EXIT THE APP"
        android:backgroundTint="#d80817"
        android:layout_alignParentBottom="true"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#ffffff"
        />
</RelativeLayout>